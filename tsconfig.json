{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@app/*" : ["src/app/*"],
      "@widgets/*" : ["src/widgets/*"],
      "@entities/*" : ["src/entities/*"],
      "@pages/*" : ["src/pages/*"],
      "@shared/*" : ["src/shared/*"]
    },
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es2020",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
